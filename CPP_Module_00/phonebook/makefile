# ğŸ“¦ Compiler setup
CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98

# ğŸ§± Files
NAME = phonebook
SRCS = main.cpp contact.cpp phonebook.cpp
OBJS = $(SRCS:.cpp=.o)

# ğŸ› ï¸ Build executable
all: $(NAME)

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJS)

# ğŸ§¼ Clean .o files
clean:
	rm -f $(OBJS)

# ğŸ§¹ Clean all
fclean: clean
	rm -f $(NAME)

# ğŸ” Rebuild
re: fclean all

.PHONY: all clean fclean re
